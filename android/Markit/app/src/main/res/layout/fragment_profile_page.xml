<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.markit.android.profile.files.ProfilePageFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_name"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="215dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="161dp"
        app:srcCompat="@drawable/sample_lmu_photo"
        android:id="@+id/imageView2" />

    <com.markit.android.resources.RoundedImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/palceholder_profile_image"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp" >

    </com.markit.android.resources.RoundedImageView>


    <?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_items"
        android:layout_width="match_parent"
        android:layout_height="324dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.markit.android.profile.files.ProfilePageFragment"
        tools:listitem="@layout/card_item"
        android:layout_gravity="bottom">

    </android.support.v7.widget.RecyclerView>

