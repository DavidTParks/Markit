<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.markit.android.ProfilePageFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_name"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="215dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="161dp"
        app:srcCompat="@drawable/sample_lmu_photo"
        android:id="@+id/imageView2" />

    <com.markit.android.RoundedImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/profilePicture"
        android:src="@drawable/palceholder_profile_image"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp" >

    </com.markit.android.RoundedImageView>

    <TextView
        android:id="@+id/connectionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Online"
        android:layout_alignTop="@+id/userPhotoProfile"/>
        <!--android:paddingEnd="@dimen/connection_status_padding"-->
        <!--android:layout_alignParentEnd="true"/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_height="250dp"
        android:background="@color/cardview_light_background"
        android:layout_marginTop="300dp">

        <TextView
            android:text="Title"
            android:id="@+id/title"
            android:layout_marginStart="0dp"
            android:layout_width="match_parent"
            android:layout_below="@+id/photo"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp"
            android:layout_marginEnd="200dp"
            android:layout_height="60dp"
            android:textStyle="normal|bold"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="match_parent"
            card_view:srcCompat="@android:color/holo_blue_dark"
            android:id="@+id/photo"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_height="150dp" />

        <TextView
            android:text="Price"
            android:layout_width="100dp"
            android:id="@+id/price"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="125dp"
            android:layout_height="50dp"
            android:textAppearance="@android:style/TextAppearance.Material.Small"
            android:forceHasOverlappingRendering="false"
            android:textStyle="bold"
            android:textSize="17sp" />

        <TextView
            android:text="uid"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/username"
            android:layout_below="@+id/photo"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="175dp" />


    </RelativeLayout>


</FrameLayout>
