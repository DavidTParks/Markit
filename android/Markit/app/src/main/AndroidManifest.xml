<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.markit.android">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".CardViewActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".Profile"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NewListing"
            android:label="@string/title_activity_new_listing"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".BaseActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".MainChatActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".FavoritesListView"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".NewConversationActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".ConversationView"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".ChatListView"
            android:label="@string/app_name"></activity>
        <activity android:name=".Registration2Activity" />
        <activity android:name=".MobileView" />
        <activity
            android:name=".ItemDetail"
            android:label="@string/title_activity_item_detail"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".NavigationActivity"
            android:label="@string/title_activity_navigation"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"></activity>
    </application>

</manifest>